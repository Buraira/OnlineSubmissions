#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int N, i, j, t, temp;
    
    for ( i=0; ; i++)
    {
        cin >> N;
        
        if (N != 0)
        {
            temp = ((N * (N+1) * ((2*N + 1))))/6; 
            cout << temp << endl;
        }
        
        else 
            break;
    }

	return 0;
}
